extends ../../layouts/master
block content
  .row
    .col-xs-8
      h3 Albums
      a(href='/albums/new') Add New Album
        form(method='get', action='/albums')
    .col-xs-4
      form(method='get', action='/albums')
        .form-group
          select#order-form.form-control(name='order' onchange='submit()')
            option(value='') Sort
            option(value='Asc') Newest Descending
            option(value='Desc') Oldest Ascending
  .row
    .col-xs-12
      .thumbnail
        each album in albums
          .panel.panel-default
            .panel-heading
              h3.panel-title: a(href='/albums/#{album._id}')= album.name
            .panel-body
              dl
                dt Album Created:
                dd= album.createdAt
              a(href='/albums/#{album._id}'): .photo(style='background-image:url("'+ album.photos[album.primary] +'")')
